<div class="column">
  <div class="card">
    <div class="card-content">
      <h2 class="card-header-title"><%= link_to cosmetic.name, cosmetic %></h2>
        <% if cosmetic.image.present? %>
          <div class="card-image">
            <figure class="image is-200x200">
              <%= image_tag cosmetic.image %>
            </figure>
          </div>
        <% end %>
          <p>
          <%= cosmetic.description %>
          </p>
        <footer class="card-footer">
          <p class="card-footer-item">
            <%= cosmetic.item_type %>
          </p>
          <p class="card-footer-item">
            <%= cosmetic.rarity %>
          </p>
        </footer>
        <aside>
          <% if cart.include?(cosmetic) %>
            <%= button_to cart_path(cosmetic), method: :delete do %>
              ❌Remove From Cart
            <% end %>
          <% else %>
          <%= form_with url: cart_index_path do %>
            <%= hidden_field_tag(:id, cosmetic.id) %>
            <%= button_tag '➕ Add to Cart' %>
            <% end %>
          <% end %>
        </aside>
    </div>
  </div>
</div>


