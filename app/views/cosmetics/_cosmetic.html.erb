<div class="column">
  <div class="card">
    <div class="card-content">
      <h2 class="title is-2"><%= link_to cosmetic.name, cosmetic %></h2>
        <% if cosmetic.image.present? %>
          <div class="card-image">
            <figure class="image is-200x200">
              <%= image_tag cosmetic.image %>
            </figure>
          </div>
        <% end %>
          <p>
          <%= cosmetic.description %>
          </p>
        <footer class="card-footer">
          <p class="card-footer-item">
            <%= cosmetic.item_type %>
          </p>
          <p class="card-footer-item">
            <%= cosmetic.rarity %>
          </p>
        </footer>
    </div>
  </div>
</div>

